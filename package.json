{
  "private": true,
  "name": "root",
  "scripts": {
    "prepare": "lerna run build --scope='next-*'",
    "clean": "lerna run clean",
    "commit": "git-cz"
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yml}": "prettier --write"
  },
  "devDependencies": {
    "@types/node": "14.11.2",
    "@types/react": "16.9.50",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "lerna": "^3.15.0",
    "lint-staged": "10.4.0",
    "microbundle": "0.12.4",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "typescript": "4.0.3"
  }
}
