{
  "private": true,
  "name": "root",
  "scripts": {
    "prepare": "lerna run build --scope='@plaiceholder/*'",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna exec --parallel --stream --ignore='example-with-11ty' -- tsc --noEmit",
    "format": "prettier",
    "commit": "git-cz"
  },
  "workspaces": [
    "docs",
    "examples/*",
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/sharp": "0.27.3",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.8",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "microbundle": "0.13.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "sharp": "0.28.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  }
}
